{
  "name": "demo-credit",
  "version": "1.0.0",
  "description": "Wallet service for Demo Credit App",
  "main": "index.js",
  "repository": "https://github.com/victor-devv/demo-credit.git",
  "author": "Victor Ikuomola <vheecthurikuomola@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node ./dist/server",
    "start:dev": "nodemon ./dist/server | bunyan",
    "start:debug": "nodemon --inspect ./dist/server | bunyan",
    "watch:tsc": "rm -rf ./dist && tsc --watch -p ./tsconfig.json",
    "build:tsc": "rm -rf ./dist && tsc -p ./tsconfig.json",
    "test": "rm -f logs.json && source .env && NODE_ENV=test DB_NAME=${DB_NAME}_test jest --runInBand --forceExit --verbose",
    "make:migration": "source .env && npx knex --knexfile ./src/common/config/db/knexfile.ts migrate:make -x ts",
    "migrate:up": "source .env && npx knex --knexfile ./src/common/config/db/knexfile.ts migrate:latest",
    "migrate:down": "source .env && npx knex --knexfile ./src/common/config/db/knexfile.ts migrate:down",
    "migrate:down:latest": "source .env && npx knex --knexfile ./src/common/config/db/knexfile.ts migrate:rollback",
    "migrate:down:all": "source .env && npx knex --knexfile ./src/common/config/db/knexfile.ts migrate:rollback --all"
  },
  "_moduleAliases": {
    "@app": "./dist"
  },
  "dependencies": {
    "@random-guys/gateman": "^2.0.1",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "bloomfilter-redis": "^0.1.2",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-request-id": "^1.4.1",
    "google-libphonenumber": "^3.2.40",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mysql2": "^3.13.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "response-time": "^2.3.3",
    "ulidx": "^2.4.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/faker": "^6.6.11",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
