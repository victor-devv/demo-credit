{
  "name": "demo-credit",
  "version": "1.0.0",
  "description": "Wallet service for Demo Credit App",
  "main": "index.js",
  "repository": "https://github.com/victor-devv/demo-credit.git",
  "author": "Victor Ikuomola <vheecthurikuomola@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node ./dist/server",
    "start:worker": "node ./dist/server/workers/index",
    "start:dev": "nodemon ./dist/server | bunyan",
    "start:debug": "nodemon --inspect ./dist/server | bunyan",
    "watch:tsc": "rm -rf ./dist && tsc --watch -p ./tsconfig.json",
    "build:tsc": "rm -rf ./dist && tsc -p ./tsconfig.json",
    "test": "rm -f logs.json && NODE_ENV=test jest --runInBand --forceExit --verbose",
    "seed": "node seed",
    "migrate:up": "node ./src/data/migrations/index up",
    "migrate:down": "node ./src/data/migrations/index down",
    "migrate:down:all": "node ./src/data/migrations/index down --to 0",
    "make:migration": "node ./src/data/migrations/index create --folder ./src/data/migrations --name"
  },
  "_moduleAliases": {
    "@app": "./dist"
  },
  "dependencies": {
    "@random-guys/gateman": "^2.0.1",
    "bcrypt": "^5.1.1",
    "bloomfilter-redis": "^0.1.2",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-request-id": "^1.4.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mysql2": "^3.13.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "response-time": "^2.3.3"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
